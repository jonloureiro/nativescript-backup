<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="loaded" class="page">
  <FlexboxLayout>
    <StackLayout class="form">
      <Label text="Smart Plug"/>
      <TextField
        hint="Email"
        keyboardType="email"
        autocorrect="false"
        autocapitalizationType="none"
        text="{{ email }}"
      />
      <TextField
        hint="Senha"
        secure="true"
        text="{{ password }}"
      />
      <Button text="Entrar" tap="signIn"/>
      <Button text="Cadastrar" tap="signUp"/>
    </StackLayout>
  </FlexboxLayout>
</Page>
